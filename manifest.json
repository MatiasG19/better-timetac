{
  "manifest_version": 2,
  "name": "Better Timetac",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "public/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.timetac.com/*"],
      "js": ["main.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{20bb1f53-50ac-41ea-9f67-e40f00f8c870}"
    }
  }
}
